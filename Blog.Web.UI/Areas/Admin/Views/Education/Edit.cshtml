@model Blog.Web.UI.Models.Entity.Education

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h1>DÜZENLE</h1>
<hr />

<form asp-action="Edit">
    <input type="hidden" asp-for="ID" />
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label><b>Okul Adı</b></label>
        <input type="text" asp-for="SchoolName" class="form-control" />
        <span asp-validation-for="SchoolName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label><b>Bölüm</b></label>
        <input type="text" asp-for="SectionName" class="form-control" />
        <span asp-validation-for="SectionName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label><b>Başlangıç Tarihi</b></label>
        <input type="text" asp-for="DateOfStart" class="form-control" id="datepicker" />
        <span asp-validation-for="DateOfStart" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label><b>Bitiş Tarihi</b></label>
        <input type="text" asp-for="DateOfFinish" class="form-control" id="datepicker2" />
        <span asp-validation-for="DateOfFinish" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label><b>Hala Devam Ediyor..</b></label>
        <input type="checkbox" asp-for="Status" />
    </div>
    <div class="form-group">
        <input type="datetime" asp-for="EditDate" value="@DateTime.Now" class="form-control" hidden />
        <input type="checkbox" asp-for="IsDeleted" value="false" class="form-control" hidden />
    </div>
    <div class="form-group">
        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#staticBackdrop">Kaydet</button>
    </div>
    <div class="modal fade" id="staticBackdrop" data-backdrop="static" tabindex="-1" role="dialog" aria-labelledby="staticBackdropLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="staticBackdropLabel">Düzenle</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    Değişiklikler kaydedilsin mi ?
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">İptal</button>
                    <input type="submit" value="Kaydet" class="btn btn-primary" />
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts
{
    <script>
        $(document).ready(function () {
            $("#datepicker").validate({
                rules: {
                    datepicker: {
                    required: true
                    }
                },
                messages: {
                    datepicker: {
                        required:"Zorunlu Alan"
                    }
                }
            });
            $('#datepicker').datepicker({
                dateFormat: "dd-mm-yy",
                changeMonth: true,
                changeYear: true,
                yearRange: "1980:@DateTime.Now.Year"
            });
            $('#datepicker2').datepicker({
                dateFormat: "dd-mm-yy",
                changeMonth: true,
                changeYear: true,
                yearRange: "1980:@DateTime.Now.Year"
            });
        });
    </script>
}