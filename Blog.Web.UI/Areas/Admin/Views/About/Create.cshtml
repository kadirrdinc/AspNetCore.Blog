@model Blog.Web.UI.Models.Entity.About
@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h1>Ekle</h1>

<form asp-action="Create">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label><b>Hakkında</b></label>
        @*<input type="text" asp-for="Description" class="form-control" />*@
        @*<span asp-validation-for="Description" class="text-danger"></span>*@
        @Html.TextAreaFor(model => model.Description, 10, 10, htmlAttributes: new { @class = "ckeditor" })
        @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        <label><b>Başlık</b></label>
        <input type="text" asp-for="Title" class="form-control" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label><b>Adres</b></label>
        @*<input type="text" asp-for="Address" class="form-control" />
            <span asp-validation-for="Address" class="text-danger"></span>*@
        @Html.TextAreaFor(model => model.Address, 10, 10, htmlAttributes: new { @class = "ckeditor" })
        @Html.ValidationMessageFor(model => model.Address, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        <label><b>E Mail</b></label>
        <input type="email" asp-for="Email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="datetime" asp-for="EditDate" value="@DateTime.Now" class="form-control" hidden />
        <input type="checkbox" asp-for="IsDeleted" value="false" class="form-control" hidden />
    </div>
    <div class="form-group">
        <input type="submit" value="Ekle" class="btn btn-primary" />
    </div>
</form>
<p></p>
<br />