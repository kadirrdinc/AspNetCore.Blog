@model List<Blog.Web.UI.Models.Entity.Experience>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h1>DENEYİM</h1>
<hr />
<a asp-action="Create" class="btn btn-primary">Ekle</a>
<p></p>
<table class="table table-hover">
    <tbody>
        @foreach (var item in Model)
        {
            <tr><td><b>Okul</b><br />@Html.Raw(item.Title)</td></tr>
            <tr><td><b>Bölüm</b><br />@Html.Raw(item.CompanyName)</td></tr>
            <tr><td><b>Bölüm</b><br />@Html.Raw(item.Description)</td></tr>
            <tr><td><b>Başlangıç Tarihi</b><br />@Html.Raw(item.DateOfStart.ToString("dd/MM/yyyy"))</td></tr>
            <tr>
                <td>
                    <b>Bitiş Tarihi</b><br />@if (item.Status == true)
                    {
                        @Html.Raw("Devam Ediyor")
                    }
                    else
                    {
                        @Html.Raw(item.DateOfFinish)
                    }
                </td>
            </tr>
            <tr>
                <td><a class="btn btn-warning" href="/Admin/Experience/Edit/@item.ID">Düzenle</a>&nbsp;<a class="btn btn-warning" href="/Admin/Experience/Delete/@item.ID">Sil</a></td>
            </tr>
        }
    </tbody>
</table>
