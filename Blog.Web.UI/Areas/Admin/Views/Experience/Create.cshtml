@model Blog.Web.UI.Models.Entity.Experience
@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h1>Create</h1>
<hr />
<a asp-action="Index" class="btn btn-primary">Geri Dön</a>

<form asp-action="Create">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label><b>İş Yeri Adı</b></label>
        <input type="text" asp-for="CompanyName" class="form-control" />
        <span asp-validation-for="CompanyName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label><b>Pozisyon</b></label>
        <input type="text" asp-for="Title" class="form-control" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label><b>Açıklama</b></label>
        <input type="text" asp-for="Description" class="form-control" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label><b>Başlangıç Tarihi</b></label>
        <input type="text" asp-for="DateOfStart" class="form-control" id="datepicker" />
        <span asp-validation-for="DateOfStart" class="text-danger"></span>
    </div>
    <div class="form-group" id="dateOfFinish">
        <label><b>Bitiş Tarihi</b></label>
        <input type="text" asp-for="DateOfFinish" class="form-control" id="datepicker2" />
        <span asp-validation-for="DateOfFinish" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label><b>Hala Devam Ediyor Mu ?</b></label>
        <input type="checkbox" asp-for="Status" id="chkStatus" onclick="ShowHideDiv(this)" />
    </div>
    <div class="form-group">
        <input type="text" asp-for="EditDate" value="@DateTime.Now" class="form-control" hidden />
        <input type="checkbox" asp-for="IsDeleted" value="false" class="form-control" hidden />
    </div>
    <div class="form-group">
        <input type="submit" value="Kaydet" class="btn btn-primary" />
    </div>
</form>

@section Scripts
{
    <script>
        $(document).ready(function () {
            $('#datepicker').datepicker({
                dateFormat: "dd-mm-yy",
                changeMonth: true,
                changeYear: true,
                yearRange: "1980:@DateTime.Now.Year"
                //dayNames: ["Pazartesi", "Salı", "Çarşamba", "Perşembe", "Cuma", "Cumartesi", "Pazar"],
                //dayNamesShort:["Pzt","Sal","Çrş","Prş","Cum","Cts","Pzr"],
            });
            $('#datepicker2').datepicker({
                dateFormat: "dd-mm-yy",
                changeMonth: true,
                changeYear: true,
                yearRange: "1980:@DateTime.Now.Year"
            });

        });
        function ShowHideDiv(chkStatus)
        {
        var dateFinish = document.getElementById("dateOfFinish");
        dateFinish.style.display = chkStatus.checked ? "none" : "block";
        }

        $(function () {
        $("#chkStatus").click(function () {
            if ($(this).is(":checked")) {
                $("#dateOfFinish").hide();
            } else {
                $("#dateOfFinish").show();
            }
        });
    });
    </script>
}
